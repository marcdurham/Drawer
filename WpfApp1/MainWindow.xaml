<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="+" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="28" Click="zoomIn_Click"/>
        <Button Content="-" Margin="43,10,730,0" VerticalAlignment="Top" Click="zoomOut_Click"/>
        <Border MouseMove="myViewport3D_MouseMove" Background="White" Margin="0,49,0,0">
        <Viewport3D Name="myViewport3D" Cursor="Cross"/>
        </Border>
        <StatusBar VerticalAlignment="Bottom">
            <Button Name="statusButton" Content="Ready" Width="100"/>
            <Button Name="statusButton2" Content="3D" Width="500"/>
        </StatusBar>
    </Grid>
</Window>
